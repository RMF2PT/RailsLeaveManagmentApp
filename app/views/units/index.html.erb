<p style="color: green"><%= notice %></p>

<h1>Units</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class="text-light bg-dark">
    <tr>
      <th scope="col" class="text-center">#</th>
      <th scope="col" class="text-center">Unit</th>
      <th scope="col" class="text-center">Abreviatura</th>
      <th scope="col" colspan="3" class="text-center">Ações</th>
    </tr>
  </thead>
  <tbody id="units">
    <% @units.each do |unit| %>
      <tr>
        <th scope="row"><%= unit.id %></th>
        <td><%= unit.name %></td>
        <td><%= unit.short_name %></td>
        <td class="text-center"><%= link_to "Ver", unit, class:"btn btn-secondary btn-sm" %></td>
        <td class="text-center"><%= link_to "Editar", edit_unit_path(unit), class:"btn btn-secondary btn-sm" %></td>
        <td class="text-center"><%= link_to "Apagar", unit_path(unit), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nova Unit", new_unit_path, class:"btn btn-secondary" %>
