<%= form_with(model: unit) do |form| %>
  <% if unit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
        <% unit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :nome, style: "display: block", class:"form-label" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="mb-2">
    <%= form.label :abreviatura, style: "display: block", class:"form-label" %>
    <%= form.text_field :short_name, class:"form-control" %>
  </div>

  <div>
    <%= form.submit class:"btn btn-success mt-2"%>
  </div>
<% end %>
